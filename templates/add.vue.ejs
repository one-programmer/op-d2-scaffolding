<template>
  <el-card>
    <el-form :model="form" label-width="80px">
      <%_ fields.forEach(function(field) { _%>
        <%_ if (field.write) { _%>
          <%_ if (field.type === 'datetime') { _%>
          <el-form-item label="<%= field.name %>">
            <el-date-picker v-model="form.<%= field.key %>" type="datetime" placeholder="选择日期时间">
            </el-date-picker>
          </el-form-item>
          <%_ } else if (field.type === 'number') { _%>
          <el-form-item label="<%= field.name %>">
            <el-input-number v-model="form.<%= field.key %>" ></el-input-number>
          </el-form-item>
          <%_ } else if (field.type === 'boolean') { _%>
          <el-form-item label="<%= field.name %>">
            <el-switch v-model="form.<%= field.key %>"></el-switch>
          </el-form-item>
          <%_ } else { _%>
          <el-form-item label="<%= field.name %>">
            <el-input v-model="form.<%= field.key %>"></el-input>
          </el-form-item>
          <%_ } _%>
        <%_ } _%>
      <%_ }) _%>
      <el-form-item>
        <el-button type="primary" @click="onSubmit">添加</el-button>
        <el-button>取消</el-button>
      </el-form-item>
    </el-form>
  </el-card>
</template>
<script>
export default {
  data () {
    return {
      apiPath: '<%= apiPath %>',
      form: {
        name: '',
        description: ''
      }
    }
  },
  created () {
    this.initForm()
  },
  methods: {
    async initForm () {
    },
    async onSubmit () {
      console.log('submit!')
      await this.$axios({
        method: 'put',
        url: `${this.apiPath}/${this.id}`,
        body: this.form
      })
      this.$notify({
        title: '成功',
        message: `添加成功`,
        type: 'success'
      })
      this.$router.go(-1)
    }
  }
}
</script>
